<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:importantForAutofill="no"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:inputType="number"
            android:hint="@string/enter_2nd_number"
            android:ems="10"
            android:id="@+id/editText4" android:layout_marginEnd="84dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="84dp"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/button1"/>
    <Button
            android:text="@string/calculate_sum"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button1"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="124dp" android:layout_marginRight="124dp"/>
    <TextView
            android:text="@string/sum"
            android:textSize="100sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="164dp"
            android:layout_marginRight="164dp"
            tools:text="0" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <EditText
            android:importantForAutofill="no"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:inputType="number"
            android:hint="@string/enter_1st_number"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginEnd="84dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="84dp"/>

</android.support.constraint.ConstraintLayout>
